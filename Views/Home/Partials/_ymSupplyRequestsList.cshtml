@using automation.mbtdistr.ru.Services.YandexMarket.Models
@using automation.mbtdistr.ru.ViewModels
@model List<YMSupplyRequest>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Статус</th>
      <th>Транзит</th>
      <th>Цель</th>
      <!-- … остальные заголовки … -->
    </tr>
  </thead>
  <tbody>
    @if (!Model.Any())
    {
      <tr>
        <td colspan="4" class="text-center">Нет данных</td>
      </tr>
    }
    else
    {
      foreach (var item in Model)
      {
        <tr>
          <td>@item.Type.GetDisplayName()</td>
          <td>@(item.Subtype.GetDisplayName() ?? "")</td>
          <td>@item.Status.GetDisplayName()</td>
          <td>@item.TransitLocation?.Name</td>
          <td>@item.TargetLocation?.Name</td>
        </tr>
      }
    }
  </tbody>
</table>
